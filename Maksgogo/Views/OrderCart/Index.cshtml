@model OrderCartViewModel


<div class = "container">
    @{
        int sum = 0;
        using (var context = new MaksgogoContext()) {
            foreach (var el in Model.OrderCart.listCartItems)
            {
                Film f =  (from u in context.Films
                         where u.IdFilm == el.IdFilm
                         select u).First();

                <div class = "alert alert-warning mt-3">
                    <b>Фільм:</b> @f.Name<br/>
                    <b>Ціна:</b> @f.Price.ToString()₴
                </div>
                sum += (int)@f.Price;
            }
            <strong>Всього до сплати: @sum.ToString()₴</strong>
        }
    }
    <hr/>
    <a class="btn btn-danger" asp-controller="Order" asp-action="CheckOut">Сплатити</a> 

</div>
