@model FilmListViewModel

<h1>Ваші фільми</h1>


<div class="row mt-5 mb-2">
    <div></div>
@{
        if (Model.getAllFilms.Count() < 1)
        {
            <p>Ви не купили ще жодного фільму для перегляду!</p>
        }
        foreach(Film f in Model.getAllFilms)
        {
            
            <div class= "col-lg-3">
                    <img class="img-thumbnail" src="@f.Image" title="@f.Name"/>
                    <h3>@f.Name</h3>
                    <p><a class="btn btn-warning" href="@f.Href" target="_blank">Дивитись</a></p>
            </div>
        }
}
</div>
